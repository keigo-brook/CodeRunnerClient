<p id="notice"><%= notice %></p>
<h1><%= @game.name %></h1>
<h2><%= @game.base_url %></h2>
<h2>API一覧</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_apis.each do |game_api| %>
      <tr>
        <td><%= link_to game_api.name, game_game_api_path(game_id: @game.id, id: game_api.id) %></td>
        <td><%= link_to 'Edit', edit_game_game_api_path(game_id: @game.id, id: game_api.id) %></td>
        <td><%= link_to 'Destroy', game_game_api_path(game_id: @game.id, id: game_api.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいAPIを追加', new_game_game_api_path(game_id: @game.id) %>
<br>
<%= link_to 'ゲーム一覧に戻る', games_path %>